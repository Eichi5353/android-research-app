<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RuleFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ルール説明，注意点"
        android:textSize="30dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@color/pink"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="１.ゲーム①　基本ルール"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="目的地の画像が提示されます．
        \nそこまで移動して，表示された画像と全く同じように写真を撮ってください．
        \n０から１００点の得点になります．
        \n\n目的地以外の画像も提示されます．\nその場所を同様に撮影をして，場所があっていると５０点になります．
\n\n目的地への到達以外は自由です．\nランキング上位を目指して頑張ってください"

                android:textSize="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="２.注意点"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="他人に迷惑をかけるようなことはしない．\n走らない．
\n同じ場所を撮影するのは１回だけにしてください"
                android:textSize="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="20dp"/>


<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="３."-->
<!--                android:textSize="25dp"-->
<!--                />-->
